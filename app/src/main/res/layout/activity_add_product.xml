<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddProductActivity">

    <LinearLayout
        android:id="@+id/ll_add_product"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/ll_add"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">

        <com.example.buunytoys.utility.MSPTextViewBold
            android:id="@+id/tv_add_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Add Product"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="319dp"
        android:layout_height="505dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="336dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.example.buunytoys.utility.MSPEditText
            android:id="@+id/et_product_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="product name" />

        <com.example.buunytoys.utility.MSPEditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:hint="description" />

        <com.example.buunytoys.utility.MSPEditText
            android:id="@+id/et_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:hint="category" />

        <com.example.buunytoys.utility.MSPEditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:hint="price" />

        <com.example.buunytoys.utility.MSPEditText
            android:id="@+id/et_quantity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:hint="quantity" />

        <LinearLayout
            android:id="@+id/ll_add_product_photo"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_add_product_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add_photo" />

            <com.example.buunytoys.utility.MSPTextView
                android:id="@+id/tv_add_product_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Add Product Image" />
        </LinearLayout>

        <com.example.buunytoys.utility.MSPButton
            android:id="@+id/btn_save_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/button_background"
            android:text="Save Product"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>